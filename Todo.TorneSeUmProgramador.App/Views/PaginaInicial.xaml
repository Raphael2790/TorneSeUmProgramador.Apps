<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Todo.TorneSeUmProgramador.App.Views.PaginaInicial"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PaginaInicial">
    <Grid Padding="10" RowDefinitions="70,*">
        <Entry
            x:Name="pesquisaEntry"
            Keyboard="Email"
            Placeholder="Pesquisar tarefa ..."
            TextChanged="PesquisaEntry_TextChanged" />
        <CollectionView
            x:Name="TarefasCollectionView"
            Grid.Row="1"
            EmptyView="NÃ£o existem tarefas cadastradas">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Nome}" />
                        <Label Text="{Binding Descricao}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button
            Grid.Row="1"
            BackgroundColor="Green"
            Clicked="AdiconarTarefa_ButtonClicked"
            CornerRadius="10"
            HorizontalOptions="Center"
            Text="+ Adicionar Tarefa"
            TextColor="White"
            VerticalOptions="End" />
    </Grid>
</ContentPage>